.container {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
  align-items: stretch
}

.item{
  width: 100%;
  height: 100%;
  padding: 10rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 45rpx;
  height: 45rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.rightText{
  position: fixed;
  right: 20rpx;
}

.arrowImage {
  width: 20rpx;
  height: 20rpx;
}

.rightView{
  border-bottom:1rpx solid;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 30rpx
}

.itemView{
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
}